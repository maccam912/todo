# Application Configuration
APP_NAME=SmartTodo
DEBUG=false
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/smart_todo
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production-at-least-32-chars-long-please-use-a-secure-random-value
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
SESSION_TOKEN_EXPIRE_DAYS=14
SESSION_TOKEN_ROTATION_DAYS=7
PASSWORD_MIN_LENGTH=12
PASSWORD_MAX_LENGTH=72

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# LLM Configuration
LLM_PROVIDER=openrouter
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_API_KEY=your-openrouter-api-key-here
LLM_MODEL=anthropic/claude-3.5-sonnet
LLM_TIMEOUT=600
LLM_MAX_RETRIES=3
LLM_TEMPERATURE=0.7

# OpenRouter Specific
OPENROUTER_APP_NAME=SmartTodo
OPENROUTER_SITE_URL=https://github.com/yourusername/smart-todo

# State Machine Configuration
MAX_CONVERSATION_ROUNDS=20
MAX_COMMAND_ERRORS=3

# OpenTelemetry Configuration
OTEL_ENABLED=true
OTEL_SERVICE_NAME=smart-todo
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_RESOURCE_ATTRIBUTES=
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp

# Phoenix-specific (legacy compatibility)
PHOENIX_API_KEY=
PHOENIX_COLLECTOR_ENDPOINT=https://phoenix.rackspace.koski.co
